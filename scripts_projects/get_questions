#!/bin/bash/

if [[ -e $1  ]]
	then
		filename="Questions $1"
		count=$(grep -Fc '**Q**' "$1")
		report="$count Questions extracted from $filename"
		printf "# $report \n \n" > "./$filename"
		grep -Fn '**Q**' "$1" | sed -e 's/\*\*Q:*\*\*:*//g' | sed -e 's/^/- /' >> "$filename"
		echo $report 
	else 
		echo Provide a file as an argument
fi
